import coroutine as co
import time

fn foo(){
    var a = vec<int>{len=10}
    a = vec<int>{len=400}
    a = vec<int>{len=500}
    a = vec<int>{len=600}
    a = vec<int>{len=700}

    a[0] = 1
    a[2] = 2
    a[4] = 4
    a[8] = 8
    a[16] = 16
    a[32] = 32
    a[64] = 64
    a[128] = 128

    var b = 'hello world nice'
    b = 'hello world nice'
    b = 'wwwwwwwwwwww'
    b = 'ccccccccccccc'
    b = 'bbbbbbbbbbbbbb'
    b = 'hello world nice'
    b = 'hello world nice'
    b = 'hello world nice'
    b = 'hello world nice'
    b = 'hello world nice'
    b = 'hello world nice'


    runtime_force_gc()

    co.sleep(1000)
