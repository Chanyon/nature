
// 匿名函数声明
// fn():int {}(), 暂时不支持普通函数生命使用匿名函数
// 这样可以简单的通过函数名称区分开类型还是函数生命
// 函数类型声明
fn():int f;

// 函数类型声明包含 name
// fn name(int,int):int f // x 暂时不允许类型中包含名称

// 普通函数声明, 如果是 stmt 类型声明，则名称不允许为空
fn foo():int {}

// 在表达式中声明，或者参数等中声明时 fn name 允许省略
var f = fn(int a, int b):int {}

call(fn(int a, int b):int {
    return a + b
})

